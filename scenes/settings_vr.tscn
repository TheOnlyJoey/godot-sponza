code = "shader_type spatial;
render_mode unshaded;

uniform sampler2D viewport_texture : hint_albedo;

void vertex() {
	VERTEX.y = 0.5 - cos(VERTEX.x) * 0.2;
}

void fragment() {
	vec4 col = texture(viewport_texture, vec2(1.0-UV.x, UV.y));
	ALBEDO = col.rgb;
	ALPHA = col.a;
}"

